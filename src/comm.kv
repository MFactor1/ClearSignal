#:kivy 2.3.0
<YesBtn>:
	canvas:
		Color:
			rgba: self.color
		RoundedRectangle:
			pos: self.x,self.y
			size: self.width, self.height
			radius: [(15, 15), (15, 15), (15, 15), (15, 15)]

	Label:
		font_size: 50
		center: self.parent.center
		text: self.parent.text

<NoBtn>:
	canvas:
		Color:
			rgba: self.color
		RoundedRectangle:
			pos: self.x,self.y
			size: self.width, self.height
			radius: [(15, 15), (15, 15), (15, 15), (15, 15)]

	Label:
		font_size: 50
		center: self.parent.center
		text: self.parent.text

<CustomBtn>:
	canvas:
		Color:
			rgba: self.color
		RoundedRectangle:
			pos: self.x,self.y
			size: self.width, self.height
			radius: [(15, 15), (15, 15), (15, 15), (15, 15)]

	Label:
		font_size: 50
		center: self.parent.center
		text: self.parent.text

<CmdWnd>:
	rows: 2
	cols: 3
	size: 10, 10
	pos: 0,0
	spacing: [10, 10]
	padding: [10, 10]

	canvas:
		Color:
			rgba: [33/255, 33/255, 33/255, 1]
		Rectangle:
			pos: 0,0
			size: root.width, root.height

	Widget:
		size_hint_y: None
		size_hint_x: None
		width: 0

	Label:
		id: key_press
		font_size: root.font_size
		center_x: root.width / 2
		top: root.top - 50
		text: root.header_text
		size_hint_y: 0.3

	Widget:
		size_hint_y: None
		size_hint_x: None
		width: 0

	YesBtn:
		id: yes_btn

	NoBtn:
		id: no_btn

	CustomBtn:
		id: custom_btn

<CommandScreen>:
	GridLayout:

ScreenManager:
	id: screen_manager
	CommandScreen:
		id: cmd_screen
		name: 'CommandScreen'
		manager: 'screen_manager'
